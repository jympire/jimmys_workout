<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div>
      <% @posts.each do |post| %>
        <div class="panel panel-default post">
          <div class="container">
            <span><%= image_tag avatar_url(post.user), class: "img-circle avatar-medium" %>&nbsp;&emsp;<%= post.date.strftime("%A, %B %d, %Y") %></span>
            <p></p>
            <p><%= post.content %></p>
          </div> 
        </div>
      <% end %>     
    </div> 
    <center><%= will_paginate @posts %></center> 
  </div>  
</div>